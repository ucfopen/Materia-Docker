FROM node:6.9.1-slim
MAINTAINER Ian Turgeon

RUN apt-get update && apt-get install -y \
  build-essential \
  fontconfig \
  python-dev \
  && apt-get clean \
  && rm -rf /var/lib/apt/lists/* /tmp/* /var/tmp/*

RUN npm install --global yarn@v0.28.1

WORKDIR /var/www/html

# Define default command.
CMD ["bash"]
