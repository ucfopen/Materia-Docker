FROM node:4.2.2-slim
MAINTAINER Ian Turgeon

RUN apt-get update && apt-get install -y \
  build-essential \
  python-dev \
  && apt-get clean \
  && rm -rf /var/lib/apt/lists/* /tmp/* /var/tmp/*

RUN npm install --global \
  bower \
  grunt-cli \
  gulp

WORKDIR /var/www/html

# Define default command.
CMD ["bash"]
